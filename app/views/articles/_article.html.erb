<tr>
  <td style="width:30px;text-align:center;">
    <% if article.upvoted_by_user?(current_user) %>
    <%= link_to '▲', '#', class: "upvoter upvoted", "data-value" => article.id %><br>
    <% else %>
    <%= link_to '▲', '#', class: "upvoter", "data-value" => article.id %><br>
    <% end %>
    <small id="votes-<%= article.id %>"><%= article.karma %></small>
  </td>
  <td>
    <strong><%= link_to article.title, article.url %></strong> <br>
    <small>Posted by <%= link_to article.user.username, user_path(article.user.username) %> <%= time_ago_in_words(article.created_at) %> ago
      <% if locals[:show_comments?] %>
      | <%= link_to "#{article.comments.count} comments", article_path(article.uid) %>
      <% end %>
      <% if user_signed_in? && current_user.id == article.user.id %>
      | <%= link_to 'Edit', edit_article_path(article.uid) %>
      | <%= link_to 'Destroy', article_path(article.uid), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </small>
  </td>
</tr>

<% if locals[:show_description?] %>
<tr>
  <td></td>
  <td>
    <% unless @article.description.nil? %>
    <p>
      <%= @article.description %>
    </p>
    <% end %>
  </td>
</tr>
<% end %>
