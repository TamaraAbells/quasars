<p id="notice"><%= notice %></p>

<h2><%= link_to(@article.title, @article.url) %></h2>
<small>Posted by <%= @article.user.email %> at <%= link_to(@article.created_at, @article) %>
  <% if user_signed_in? %>
  | <%= link_to 'Edit', edit_article_path(@article) %>
  | <%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</small>

<% unless @article.description.nil? %>
<p>
  <%= @article.description %>
</p>
<% end %>

<%= link_to 'Back', "/" %>
